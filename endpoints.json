{
  "GET /api": {
    "description": "Serves a JSON representation of all available endpoints of the API."
  },
  "GET /api/topics": {
    "description": "Serves an array of all topics.",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "POST /api/topics": {
    "description": "Adds a new topic to the database.",
    "request_body": {
      "slug": "String - The name of the topic (required)",
      "description": "String - The description of the topic (required)"
    },
    "exampleResponse": {
      "topic": {
        "slug": "the-topic",
        "description": "Description"
      }
    }
  },
  "GET /api/articles": {
    "description": "Serves an array of articles with pagination and filtering support.",
    "queries": ["topic", "sort_by", "order", "limit", "p"],
    "exampleResponse": {
      "articles": [
        {
          "id": "aFirestoreId123",
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "...",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/...",
          "comment_count": 6
        }
      ],
      "total_count": 42
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Serves a specific article object by article_id (Firestore doc ID).",
    "exampleResponse": {
      "article": {
        "id": "aFirestoreId123",
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 0,
        "article_img_url": "https://...",
        "comment_count": 11
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Returns comments for an article with pagination.",
    "queries": ["limit", "p"],
    "exampleResponse": {
      "comments": [
        {
          "id": "aCommentIdXYZ",
          "body": "Nice article!",
          "article_id": "aFirestoreId123",
          "author": "butter_bridge",
          "votes": 14,
          "created_at": "2020-10-31T03:03:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "Adds a new article.",
    "request_body": {
      "author": "string",
      "title": "string",
      "body": "string",
      "topic": "string",
      "article_img_url": "string (optional)"
    },
    "exampleResponse": {
      "article": {
        "id": "newFirestoreId",
        "author": "icellusedkars",
        "title": "How to write tests",
        "body": "Writing tests is important",
        "topic": "coding",
        "article_img_url": "https://example.com/image.jpg",
        "votes": 0,
        "created_at": "2024-01-01T12:00:00.000Z",
        "comment_count": 0
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Adds a comment to an article by its Firestore article_id.",
    "exampleResponse": {
      "comment": {
        "id": "newCommentIdABC",
        "body": "You are not good at writing news articles.",
        "article_id": "aFirestoreId123",
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2024-01-01T12:05:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates an article's votes by Firestore article_id.",
    "request_body": { "inc_votes": "number" },
    "exampleResponse": {
      "article": {
        "id": "aFirestoreId123",
        "title": "Living in the shadow of a great man",
        "votes": 100
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "Updates a comment's votes by Firestore comment_id.",
    "request_body": { "inc_votes": "number" },
    "exampleResponse": {
      "comment": {
        "id": "aCommentIdXYZ",
        "body": "This is a comment",
        "votes": 17,
        "author": "butter_bridge",
        "article_id": "aFirestoreId123",
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by Firestore comment_id.",
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "Serves an array of all users.",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://..."
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "Gets a user by their username.",
    "exampleResponse": {
      "user": {
        "username": "icellusedkars",
        "name": "sam",
        "avatar_url": "https://..."
      }
    }
  }
}